<AuthorizeView>
    <Authorized>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @context.User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <a class="nav-link btn btn-link text-dark" href="/account/logout">Logout</a>
            </li>
        </ul>
    </Authorized>
    <NotAuthorized>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" href="/account/login">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/account/login">Login</a>
            </li>
        </ul>
    </NotAuthorized>
</AuthorizeView>